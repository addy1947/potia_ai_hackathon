# Dependency Security Agent Dockerfile
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Install Portia AI SDK
RUN pip install --no-cache-dir "portia-sdk-python[all]"

# Copy application code
COPY src/ ./src/
COPY config.yaml .
COPY main.py .
COPY test_agent.py .

# Create directory for logs and reports
RUN mkdir -p /app/logs /app/reports

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash agent
RUN chown -R agent:agent /app
USER agent

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD python main.py test || exit 1

# Default command
CMD ["python", "main.py", "scheduled-scan"]